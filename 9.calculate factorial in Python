#without using function
n=int(input("Enter the value of n"))
fact=1
for i in range(1,n+1):
    fact=i*fact
 print(fact)
 
 
 
#using function
n=int(input("Enter the value of n"))
def fact(n):
    if n==1:
        return 1
    else:
        return (n*fact(n-1))
factorial =fact(n)
print("Factorial of",n,"is",factorial)
